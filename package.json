{
  "name": "dicom-curate",
  "version": "0.9.0",
  "packageManager": "pnpm@10.15.0",
  "description": "Organize and de-identify DICOM header data ",
  "type": "module",
  "main": "dist/esm/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "types": "./dist/types/index.d.ts",
      "default": "./dist/esm/index.js"
    },
    "./umd": {
      "require": "./dist/umd/dicom-curate.umd.js"
    },
    "./umd.min": {
      "require": "./dist/umd/dicom-curate.umd.min.js"
    }
  },
  "files": [
    "dist"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "scripts": {
    "pre-commit:check": "tsc --noEmit && pnpm lint",
    "clean": "rm -rf dist",
    "build": "pnpm generate:sampleSpec && pnpm build:esm && pnpm build:types && rollup -c",
    "build:esm": "node esbuild.config.js",
    "build:types": "tsc --emitDeclarationOnly --outDir dist/types",
    "watch": "node esbuild.config.js --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "format": "prettier --write .",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "prepare": "husky install",
    "generate:sampleSpec": "tsx scripts/generateSampleSpec.ts",
    "generate:unitTestSample": "tsx scripts/generateSampleDicomData.ts",
    "validate": "pnpm build && pnpm test"
  },
  "dependencies": {
    "acorn": "^8.14.1",
    "acorn-globals": "^7.0.1",
    "dcmjs": "^0.38.3",
    "iso8601-duration": "^2.1.2",
    "js-sha256": "^0.11.0",
    "lodash": "^4.17.21",
    "memize": "^2.1.0",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.34.0",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.3",
    "@semantic-release/npm": "^12.0.1",
    "@types/jest": "^29.5.0",
    "@types/lodash": "^4",
    "@types/wicg-file-system-access": "^2023.10.6",
    "@types/xml2js": "^0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "esbuild": "^0.20.0",
    "eslint": "^9.0.0",
    "globals": "^16.4.0",
    "husky": "^8.0.3",
    "jest": "^30.0.5",
    "lint-staged": "^16.1.5",
    "node-fetch": "^3.3.2",
    "prettier": "^3.4.2",
    "rollup": "^4.43.0",
    "rollup-plugin-polyfill-node": "^0.13.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-web-worker-loader": "^1.7.0",
    "semantic-release": "^24.2.5",
    "ts-jest": "^29.2.6",
    "tslib": "^2.8.1",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "xml2js": "^0.6.2"
  },
  "license": "Apache-2.0"
}
